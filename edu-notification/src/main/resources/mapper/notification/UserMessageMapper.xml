<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.edu.notification.mapper.UserMessageMapper">

    <resultMap id="UserMessageResult" type="com.edu.notification.domain.entity.UserMessage">
        <id property="id" column="id"/>
        <result property="notificationId" column="notification_id"/>
        <result property="userId" column="user_id"/>
        <result property="userType" column="user_type"/>
        <result property="isRead" column="is_read"/>
        <result property="readTime" column="read_time"/>
        <result property="isDeleted" column="is_deleted"/>
        <result property="createTime" column="create_time"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="type" column="type"/>
        <result property="sendTime" column="send_time"/>
    </resultMap>

    <select id="selectUserMessagePage" resultMap="UserMessageResult">
        SELECT um.*,
               n.title,
               n.content,
               n.type,
               n.send_time
        FROM msg_user_message um
        LEFT JOIN msg_notification n ON um.notification_id = n.id
        WHERE um.is_deleted = 0
          AND um.user_id = #{userId}
          AND um.user_type = #{userType}
        <if test="isRead != null">
            AND um.is_read = #{isRead}
        </if>
        ORDER BY um.create_time DESC
    </select>

    <select id="countUnread" resultType="int">
        SELECT COUNT(*)
        FROM msg_user_message
        WHERE is_deleted = 0
          AND user_id = #{userId}
          AND user_type = #{userType}
          AND is_read = 0
    </select>

</mapper>
