# 应用配置
APP_VERSION=1.0.0
APP_PORT=8080
SPRING_PROFILES_ACTIVE=prod

# 数据库配置
MYSQL_PORT=3306
MYSQL_ROOT_PASSWORD=root123456
MYSQL_PASSWORD=edu123456
DB_USERNAME=edu_user
DB_PASSWORD=edu123456

# Redis 配置
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT 配置
JWT_SECRET=edu-admin-secret-key-must-be-at-least-256-bits-long-for-security-production
JWT_EXPIRATION=86400

# 文件存储配置
FILE_BASE_URL=/files

# OSS 配置（可选，启用后将使用 OSS 存储）
OSS_ENABLED=false
OSS_ENDPOINT=
OSS_ACCESS_KEY=
OSS_SECRET_KEY=
OSS_BUCKET=

# Nginx 配置
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# JVM 配置
JAVA_OPTS=-Xms512m -Xmx1024m -XX:+UseG1GC -XX:MaxGCPauseMillis=200
